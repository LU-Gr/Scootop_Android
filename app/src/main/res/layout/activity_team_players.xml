<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.team.players.TeamPlayersActivity">

    <LinearLayout
        android:id="@+id/Team_introduce_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/Coach_Box_Team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Team_Coach_fonction_box_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Head Coach"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/Coach_img_box"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/Team_Coach_name_box_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MOURINHO"
                android:textAlignment="center"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/Team_Coach_surname_box_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="José"
                android:textAlignment="center"
                android:textSize="7dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Logo_Box_Team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/Logo_football_pics"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo_tottenham" />

            <TextView
                android:id="@+id/Team_Logo_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="U23"
                android:textAlignment="center"
                android:textSize="8dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/team_defenseur_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/Team_introduce_box"
        app:layout_constraintTop_toBottomOf="@+id/Team_introduce_box">

        <LinearLayout
            android:id="@+id/Player_Box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/Player_team_img_box"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/Player_team_img_box_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MOURINHO"
                android:textAlignment="center"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/Player_team_surname_box_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="José"
                android:textAlignment="center"
                android:textSize="7dp" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/team_midfield_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_defenseur_box"
        app:layout_constraintVertical_bias="0.016"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/Defender_Player_Box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/Defender_Player_team_img_box"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/Defender_Player_team_img_box_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MOURINHO"
                android:textAlignment="center"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/Defender_Player_team_surname_box_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="José"
                android:textAlignment="center"
                android:textSize="7dp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/team_Forward_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/team_midfield_box"
        tools:layout_editor_absoluteX="0dp">


    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/team_Forward_box"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_midfield_box">

        <LinearLayout
            android:id="@+id/InteractionBox_Alerte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_count_alerte_Value"
                android:layout_width="85dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:text="50"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_count_alerte_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerte"
                android:textColor="@color/gray"
                android:textSize="10dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/InteractionBox_Suivre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_count_follow_Value"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:text="15"
                android:textColor="@color/colorPrimary"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_count_follow_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suivre"
                android:textColor="@color/gray"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/InteractionBox_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_count_invite_Value"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="10"
                android:textColor="@color/green"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_count_invite_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Inviter"
                android:textColor="@color/gray"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/CalendarlinearLayoutBox"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutCompat"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutCompat">

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>